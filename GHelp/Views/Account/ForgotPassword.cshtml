                    <h3 class="box-title m-b-20">¿Olvidó su contraseña?</h3>
                    <h4>Ingresé su email para recibir la contraseña</h4>
                    <br />
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal mt-3 form-material", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group row">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "EMAIL" })
                            </div>
                        </div>
                        <div class="form-group text-center p-b-10">
                            <div class="col-xs-12">
                                <input type="submit" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" value="RESTABLECER Y ENVIAR EMAIL" />
                            </div>
                        </div>

                        <div class="form-group mb-0 mt-2 ">
                            <div class="col-sm-12 text-center ">
                                Recordó su contraseña? <a href="login" class="text-info ml-1 ">Login</a>
                            </div>
                        </div>

                    }




                </div>
            </div>
        </div>
    </section>

    <script src="~/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/assets/node_modules/popper/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".preloader").fadeOut();
        });
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
    </script>

</body>
</html>
